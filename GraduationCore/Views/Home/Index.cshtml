@{ ViewData["Title"] = "Home Page"; } 
@{ Layout = "_Layout"; } 
@using System 
@using GraduationCore.Common.Models.ViewModels
@section HeadCSS{ }
<div class="page-header clear-filter" filter-color="orange">
    <div class="page-header-image" data-parallax="true" style="background-image: url('lib/uncleo/assets/img/header.jpg');">
    </div>
    <div class="container">
        <div class="content-center brand">
            <img class="n-logo" src="lib/uncleo/assets/img/now-logo.png" alt="">
            <!--<h1 class="h1-seo">Now UI Kit.</h1>-->
            <h2>长春市 @DateTime.Now.Year.ToString() 年中小学网上报名正式启动！</h2>
            <br/>
            <input type="button" class="btn btn-primary" value="观看使用教程" onclick="showVideo()" />
        </div>
        <h6 class="category category-absolute">
            向下继续
        </h6>
    </div>
</div>

<!-- <div class="main"> -->
<div class="section section-signup" style="background-image: url('lib/uncleo/assets/img/bg11.jpg');background-size: cover; background-position: top center; min-height: 700px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
                <!-- ml-auto mr-auto">-->
                <p class="category">&nbsp;</p>
                <p class="category">&nbsp;</p>
                <!-- Nav tabs -->
                <div class="card">
                    <ul class="nav nav-tabs justify-content-center" role="tablist" data-background-color="black">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home" role="tab">
                                <i class="now-ui-icons objects_umbrella-13"></i> 温馨提示
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#profile" role="tab">
                                <i class="now-ui-icons shopping_cart-simple"></i> 报名日程
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#messages" role="tab">
                                <i class="now-ui-icons shopping_shop"></i> 监督举报
                            </a>
                        </li>
                    </ul>
                    <div class="card-body" style="height:400px;OVERFLOW-Y: auto;OVERFLOW-X:hidden;">
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane active" id="home" role="tabpanel">
                                <!--warm prompt-->
                                @Html.Raw(ViewBag.WarmPrompt.Content)
                            </div>
                            <div class="tab-pane" id="profile" role="tabpanel">
                                <div class="container">
                                    <div id="typography">
                                        <div class="row">
                                            <div class="col-md-3"></div>
                                            <div class="col-md-9">
                                                <!--Schedule-->
                                                @{ foreach (var item in ViewBag.ApplyScheduleList) {
                                                <div class="typography-line">
                                                    <h6>
                                                        <span>@item.BeginTime</span>
                                                        <p class="@item.TextClass">@item.Title</p>
                                                    </h6>
                                                </div>
                                                } }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="tab-pane" id="messages" role="tabpanel">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th align="center">教育局</th>
                                            <th>地址</th>
                                            <th>监督举报电话</th>
                                            <th>备注</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!--EducationBureau-->
                                        @{ foreach (var item in ViewBag.EducationBreauList) {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Address</td>
                                            <td>@item.Tel</td>
                                            <td>@item.Remark</td>
                                        </tr>
                                        } }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="category category-absolute text-center">
                            <button class="btn btn-info btn-round" data-toggle="modal" data-target="#myModal">下一步</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- </div> -->
<!-- Sart Modal 可以单独写一个页面-->
@Html.Partial("IdNumberConfirm")
<!--  End Modal -->
@section FootJS{
<script>
    function showVideo() {
        layer.open({
            type: 2,
            title: false,
            area: ['630px', '360px'],
            shade: 0.8,
            closeBtn: 1,
            shadeClose: true,
            content: 'media/sysMedia.mp4'
        });
    }
</script> }