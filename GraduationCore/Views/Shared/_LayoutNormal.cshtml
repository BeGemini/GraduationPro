@using System;
<!DOCTYPE html>
<html lang="zh">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/lib/uncleo/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/lib/uncleo/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@DateTime.Now.Year.ToString()年中小学报名</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport'/>
    
    @Html.Partial("_LayoutCSS.cshtml")
    @RenderSection("HeadCSS")
</head>

<body class="index-page sidebar-collapse">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-info fixed-top" color-on-scroll="400">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="#" rel="tooltip" data-placement="bottom">
                    长春市教育局
                </a>
                <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse justify-content-end" id="navigation" data-nav-image="lib/uncleo/assets/img/blurred-image-1.jpg">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" onclick="showAbout()" target="_blank">
                            <i class="now-ui-icons files_paper"></i>
                            <p>关于</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="showAbout()" target="_blank">
                            <i class="now-ui-icons ui-2_favourite-28"></i>
                            <p>联系我们</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="wrapper">

        @RenderBody()

        <footer class="footer" data-background-color="black">
            <div class="container">
                <!-- <nav>
                    <ul>
                        <li>
                            <a href="http://presentation.creative-tim.com">
                                关于
                            </a>
                        </li>
                    </ul>
                </nav> -->
                <div class="copyright">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>, Designed by .长春理工大学
                </div>
            </div>
        </footer>
    </div>
</body>
@Html.Partial("_LayoutJS.cshtml")
<script type="text/javascript">
    function showAbout() {
        layer.alert('关于', {
            icon: 0,
            skin: 'layer-ext-moon',
            content:'长春理工大学\r\n计算机科学技术学院\r\n140521317',
            title:'关于'
        })
    }
</script> 
@RenderSection("FootJS")

</html>